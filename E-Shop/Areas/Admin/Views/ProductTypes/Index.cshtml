@model IEnumerable<E_Shop.Models.ProductTypes>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="Container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Product Type List</h2>
        </div>
        <div class="col-6">
           <a class="btn btn-sm btn-primary m-2" asp-controller="ProductTypes" asp-action="Create"> <i class="fa-sharp fa-solid fa-plus"></i>Add New Product</a>
        </div>
    </div>
</div>

<br />

<div>
    <table class="table table-dark ">
        <tr>
            <th class="col-3 ">Id</th>
            <th class="col-4">ProductType</th>
            <th class="col-1"></th>
            <th class="col-4">Action</th>
        </tr>

        @foreach (var data in Model)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.ProductType</td>
                <td>
                    <partial name="_ButtonPartial" model="@data.Id" />
                </td>
            </tr>
        }
    </table>

</div>

