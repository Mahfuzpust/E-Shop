@model IEnumerable<E_Shop.Models.NewProduct>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="Container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Product Type List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-sm btn-primary m-2" asp-controller="NewProduct" asp-action="Create"> <i class="fa-sharp fa-solid fa-plus"></i>Add New Product</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>price</th>
                    <th>ProductColor</th>
                    <th>IsActive</th>
                    <th></th>
                    <th>Action</th>
                </tr>
                @foreach (var data in Model)
                {
                    <tr class="text-center">
                        <td>@data.Id</td>
                        <td>@data.Name</td>
                        <td><img src="@data.ImagePath" height="100px;" width="100px;" /> </td>
                        <td>@data.Description</td>
                        <td>@data.price</td>
                        <td>@data.ProductColor</td>
                        <td>@data.IsActive</td>
                        <td>
                           <partial name="_ButtonPartial" model="@data.Id" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>