@model E_Shop.Models.ViewModel.ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}

<h1>UploadImage</h1>

<a class="btn btn-sm btn-primary m-2" asp-controller="NewProduct" asp-action="Index">Back</a>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="Create" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name"/>
                    <span class ="text-danger" asp-validation-for="Name"></span>
                 </div>

                 <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file" asp-for="ImagePath" class="form-control"/>
                    <span class="text-danger" asp-validation-for="ImagePath"></span>
                 </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Enter Name" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label asp-for="price"></label>
                    <input type="text" asp-for="price" class="form-control" placeholder="Enter Name" />
                    <span class="text-danger" asp-validation-for="price"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductColor"></label>
                    <input type="text" asp-for="ProductColor" class="form-control" placeholder="Enter Name" />
                    <span class="text-danger" asp-validation-for="ProductColor"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input type="checkbox" asp-for="IsActive"/>
                    <span class="text-danger" asp-validation-for="IsActive"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn-group-sm btn-primary my-2 float-end"/>
                </div>

             </form>
        </div>
    </div>
</div>